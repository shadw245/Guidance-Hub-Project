<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= major.name %></title>
    <link rel="stylesheet" href="/css/styling.css">
    <script src="/js/javascript.js"></script>
</head>
<body>
    <%- include('partials/nav') %>


    <input type="text" id="searchBox" placeholder="Search Submajors..." onkeyup="searchMajors()">
    <div class="container">
  <% if (major.submajors && major.submajors.length) { %>
    <% major.submajors.forEach(function(sub) { %>
      <a href="/majors/<%= major.name %>/<%= sub.name %>" class="major-box">
        <img src="/uploads/pics/<%= sub.img %>"  alt="<%= sub.name %>" style="width:100%;height:100%;object-fit:cover;position:absolute;z-index:0;">
        <span style="position:relative;z-index:1;"><%= sub.name %></span>
      </a>
    <% }) %>
  <% } else { %>
    <p>No submajors found for this major.</p>
  <% } %>
</div>
