<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mentorships</title>
    <link rel="stylesheet" href="/css/styling.css">
    <script src="/js/javascript.js"></script>
</head>

<body>
    <%- include('partials/nav') %>

    <!-- Major Dropdown -->
<div class="dropdown">
  <button class="dropbtn" onclick="toggleDropdown('majorDropdownContent')">Select Major</button>
  <div id="majorDropdownContent" class="dropdown-content">
    <div onclick="selectMajor('All')">All</div>
   <% Object.keys(subMajors).forEach(major => { %>
  <div onclick="selectMajor('<%= major %>')"><%= major %></div>
<% }); %>
  </div>
</div>
<input type="hidden" id="majorSelect" value="All" />

<!-- Sub-Major Dropdown -->
<div class="dropdown">
  <button class="dropbtn" onclick="toggleDropdown('dropdownContent')">Select Sub-Major</button>
  <div id="dropdownContent" class="dropdown-content"></div>
</div>
<input type="hidden" id="subMajorSelect" value="All" />

<!-- Status Dropdown -->
<div class="dropdown">
  <button class="dropbtn" onclick="toggleDropdown('statusDropdownContent')">Select Status</button>
  <div id="statusDropdownContent" class="dropdown-content">
    <div onclick="selectStatus('All')">All</div>
    <div onclick="selectStatus('Booked')">Booked</div>
    <div onclick="selectStatus('Not Booked')">Not Booked</div>
  </div>
</div>
<input type="hidden" id="statusSelect" value="All" />




<div class="course-list" id="courseList">
<!--  Mentorships -->
       
 
<% mentorships.forEach(mentorship => { %>
  <div class="course-card" 
       data-major="<%= mentorship.major %>" 
       data-sub-major="<%= mentorship.subMajor %>">
    <h3><%= mentorship.title %></h3>
    <p>Date: <%= mentorship.date %> | Time: <%= mentorship.time %></p>
    <button class="book-button" onclick="bookSession(this, '<%= mentorship.title %>', '<%= mentorship.date %>', '<%= mentorship.time %>')">
      Book Now
    </button>
  </div>
<% }) %>



    <!-- Calendar Style Schedule Section -->
    <section class="calendar">
        <h2>Schedule</h2>
        <div class="day">
            <h3>Monday</h3>
            <div class="session" id="monday-sessions"></div>
        </div>
        <div class="day">
            <h3>Tuesday</h3>
            <div class="session" id="tuesday-sessions"></div>
        </div>
        <div class="day">
            <h3>Wednesday</h3>
            <div class="session" id="wednesday-sessions"></div>
        </div>
        <div class="day">
            <h3>Thursday</h3>
            <div class="session" id="thursday-sessions"></div>
        </div>
        <div class="day">
            <h3>Friday</h3>
            <div class="session" id="friday-sessions"></div>
        </div>
        <div class="day">
            <h3>Saturday</h3>
            <div class="session" id="saturday-sessions"></div>
        </div>
        <div class="day">
            <h3>Sunday</h3>
            <div class="session" id="sunday-sessions"></div>
        </div>
    </section>
    <!--Footer-->
    <%- include('partials/footer') %>
</body>
</html>
